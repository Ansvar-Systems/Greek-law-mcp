{
  "$schema": "./golden-tests.schema.json",
  "version": "1.1",
  "mcp_name": "Greek Law MCP",
  "description": "Golden contract tests for official FEK ingestion (PDF extraction with OCR fallback where needed).",
  "tests": [
    {
      "id": "gr-real-001",
      "category": "retrieval_test",
      "description": "Article retrieval for Law 4624/2019 Art. 1 returns source-derived text.",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Ν. 4624/2019",
        "article": "Art. 1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "gr-real-002",
      "category": "search_test",
      "description": "Search across ingested provisions executes successfully.",
      "tool": "search_legislation",
      "input": {
        "query": "προσωπικά δεδομένα"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "gr-real-003",
      "category": "citation_roundtrip",
      "description": "Provision citation request for PD 131/2003 Art. 1 returns source-derived text.",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Π.Δ. 131/2003",
        "article": "Art. 1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "gr-real-004",
      "category": "negative_test",
      "description": "Non-existent law identifier is handled gracefully.",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Νόμος 9999/2099",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
