{
  "$schema": "./golden-tests.schema.json",
  "version": "1.1",
  "mcp_name": "Greek Law MCP",
  "description": "Golden contract tests for metadata-only ingestion from official Greek sources (PDF-only full text limitation).",
  "tests": [
    {
      "id": "gr-meta-001",
      "category": "negative_test",
      "description": "Article retrieval gracefully handles missing structured article text for Law 4624/2019.",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Ν. 4624/2019",
        "article": "Art. 1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "gr-meta-002",
      "category": "negative_test",
      "description": "Search returns gracefully when no provision corpus is available.",
      "tool": "search_legislation",
      "input": {
        "query": "προσωπικά δεδομένα"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "gr-meta-003",
      "category": "citation_roundtrip",
      "description": "Provision citation request for PD 131/2003 returns a graceful empty response.",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Π.Δ. 131/2003",
        "article": "Art. 1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "gr-meta-004",
      "category": "negative_test",
      "description": "Non-existent law identifier is handled gracefully.",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Νόμος 9999/2099",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
